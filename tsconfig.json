{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@site/*": ["./*"]
    },
    "skipLibCheck": true,
    "types": ["node", "@docusaurus/module-type-aliases", "@docusaurus/theme-classic"]
  },

  "extends": "@xylabs/tsconfig-react"
}
